{
  "manifest_version": 3,
  "name": "Twitter Account Location Flag",
  "version": "1.1.1",
  "description": "Shows country flag emoji next to Twitter usernames based on account location",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://twitter.superintendent.me/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Twitter Location Flag"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "twitter-location-flag@example.com",
      "strict_min_version": "91.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["countryFlags.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pageScript.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
