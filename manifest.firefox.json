{
  "manifest_version": 2,
  "name": "Twitter Account Location Flag",
  "version": "1.1.2",
  "description": "Shows country flag emoji next to Twitter usernames based on account location",
  "permissions": [
    "storage",
    "https://x.com/*",
    "https://twitter.com/*",
    "https://twitter.superintendent.me/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Twitter Location Flag"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "twitter-location-flag@example.com",
      "strict_min_version": "91.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["countryFlags.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": ["pageScript.js"]
}
